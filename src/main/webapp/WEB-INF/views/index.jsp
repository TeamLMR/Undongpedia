    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Swiper Ï¥àÍ∏∞Ìôî
            new Swiper(".init-swiper", {
                loop: true,
                speed: 600,
                autoplay: {
                    delay: 7000,
                    disableOnInteraction: false
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev"
                }
            });
            
            // Ïπ¥Ïö¥Ìä∏Îã§Ïö¥ ÌÉÄÏù¥Î®∏ Ï¥àÍ∏∞Ìôî
            initCountdownTimers();
        });
        
        function initCountdownTimers() {
            const timers = document.querySelectorAll('.countdown-timer');
            
            timers.forEach(timer => {
                const openTime = parseInt(timer.getAttribute('data-open-time'));
                if (openTime) {
                    updateCountdown(timer, openTime);
                    // 1Ï¥àÎßàÎã§ ÏóÖÎç∞Ïù¥Ìä∏
                    setInterval(() => updateCountdown(timer, openTime), 1000);
                }
            });
        }
        
        function updateCountdown(element, openTime) {
            const now = new Date().getTime();
            const distance = openTime - now;
            
            if (distance < 0) {
                element.innerHTML = "üéâ Ïò§ÌîàÎê®!";
                element.parentElement.classList.remove('btn-light');
                element.parentElement.classList.add('btn-success');
                return;
            }
            
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            element.innerHTML = `‚è∞ \${days}Ïùº \${hours.toString().padStart(2, '0')}:\${minutes.toString().padStart(2, '0')}:\${seconds.toString().padStart(2, '0')}`;
        }
